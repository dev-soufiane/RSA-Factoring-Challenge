#!/usr/bin/env python3
"""Module - Factors natural numbers"""

from __future__ import division
import sys
import os


def factorizer(filename):
    """Read and find factorials of every line """
    with open(filename, 'r') as f:
        for line in f:
            n = int(line)
            res = func_facto(n)
            print("{}={}*{}".format(n, int(n / res), res))
    f.closed


def func_facto(n):
    """Returns the minimun factorial value """
    for i in range(1, n + 1):
        if n % i == 0 and i != 1:
            return i


if __name__ == "__main__":
    """main"""
    if (len(sys.argv) != 2):
        raise SyntaxError("[BAD-USAGE]: Expected only one argument")
    factorizer(sys.argv[1])
