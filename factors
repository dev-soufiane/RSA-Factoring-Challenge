#!/usr/bin/env python3

'''Module - Factors natural numbers'''

from __future__ import division
import sys
import os


def calculate_factors(filename):
    '''Read and find factors of every line'''
    with open(filename, 'r') as file:
        for line in file:
            number = int(line)
            result = find_factors(number)
            print("{}={}*{}".format(number, int(number / result), result))
    file.closed


def find_factors(x):
    '''Returns the minimum factorial number'''
    for y in range(1, x + 1):
        if x % y == 0 and y != 1:
            return y


if __name__ == "__main__":

    '''Main'''
    if len(sys.argv) != 2:
        raise SyntaxError("[BAD-USAGE]: Expected only one argument")
    calculate_factors(sys.argv[1])
